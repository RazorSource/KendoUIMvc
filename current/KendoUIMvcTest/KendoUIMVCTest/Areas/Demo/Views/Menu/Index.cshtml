@{
    ViewBag.Title = "Kendo UI MVC Menu";
}

<h2>Menu</h2>
@(UI.Menu("demoMenu")
    .AddMenuItem("mnuControls", "Controls", 
        new IMenuItem<object>[] {
            UI.MenuItem("mnuAjaxForm", "AJAX Form", "Index", "AjaxForm"),
            UI.MenuItem("mnuButton", "Button", "Index", "Button"),
            UI.MenuItem("mnuHtmlForm", "HTML Form", null, 
                    new IMenuItem<object>[] {
                        UI.MenuItem("mnuHtmlForm", "Basic", "Index", "HtmlForm"),
                        UI.MenuItem("mnuHtmlForm", "Horizontal Labels", "HorizontalLabels", "HtmlForm"),
                        UI.MenuItem("mnuHtmlForm", "Two Columns", "TwoColumns", "HtmlForm"),
                    })
        })
    .AddMenuItem("mnuWebSearch", "Web Search",
        new IMenuItem<object>[] {
            UI.MenuItem("mnuGoogle", "Google", "http://www.google.com"),
            UI.MenuItem("mnuGoogle", "Yahoo", "http://www.yahoo.com")
        })
    )



